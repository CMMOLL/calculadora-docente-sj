{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Indice provincial mensual",
  "type": "object",
  "required": ["_meta", "valor_indice"],
  "properties": {
    "_meta": {
      "type": "object",
      "required": ["periodo", "fuente", "actualizado"],
      "properties": {
        "periodo": { "type": "string", "pattern": "^\\d{4}-\\d{2}$" },
        "fuente": { "type": "string" },
        "actualizado": { "type": "string", "format": "date" },
        "norma": { "type": "string" }
      },
      "additionalProperties": false
    },
    "valor_indice": { "type": "number", "exclusiveMinimum": 0 }
  },
  "additionalProperties": false
}
